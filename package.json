    "lint:tsc": "tsc --noEmit",
    "postversion": "pnpm i --no-frozen-lockfile",
    "prepare": "simple-git-hooks",
    "prerelease": "pnpm build",
    "release": "changeset publish",
    "serve": "sirv dist -s",
    "test": "run-p test:*",
    "test:browser": "vitest run --coverage",
    "test:node": "cross-env TEST_ENV=node vitest run --coverage",
