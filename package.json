{
  "name": "ab64",
  "version": "0.1.3",
  "type": "module",
  "description": "The smallest and fastest Base64 implementation in JavaScript",
  "repository": "git+https://github.com/un-ts/ab64.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "funding": "https://opencollective.com/unts",
  "license": "MIT",
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": "^12.20.0 || ^14.18.0 || >=16.0.0"
  },
  "exports": {
    ".": "./src/index.ts",
    "./ponyfill": "./src/ponyfill.ts"
  },
  "files": [
    "index.d.cts",
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "keywords": [
    "atob",
    "base64",
    "btoa",
    "base64-decoder",
    "base64-decoding",
    "base64-encoder",
    "base64-encoding",
    "base64-url"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -p src",
    "dev": "vitest",
    "docs:build": "vite build",
    "docs:dev": "vite dev",
    "format": "prettier -w .",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:style": "stylelint . --cache",
    "lint:tsc": "tsc --noEmit",
    "mini-app": "tsx scripts/mini-app",
    "prepare": "simple-git-hooks",
    "release": "pnpm mini-app && pnpm build && clean-pkg-json && changeset publish",
    "serve": "sirv dist -s",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "pnpm docs:build",
    "version": "changeset version && pnpm i --no-frozen-lockfile"
  },
  "devDependencies": {
    "@1stg/app-config": "^11.1.0",
    "@1stg/lib-config": "^13.0.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@mdx-js/rollup": "^3.1.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/web": "^0.0.214",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-istanbul": "^3.0.9",
    "clean-pkg-json": "^1.2.1",
    "cross-env": "^7.0.3",
    "edge-runtime": "4.0.1",
    "eslint": "^9.23.0",
    "github-markdown-css": "^5.8.1",
    "lint-staged": "^15.5.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "remark-gfm": "^4.0.1",
    "simple-git-hooks": "^2.12.1",
    "sirv-cli": "^3.0.1",
    "size-limit": "^11.2.0",
    "stylelint": "^16.17.0",
    "tsx": "^4.19.3",
    "type-coverage": "^2.29.7",
    "typescript": "~5.8.2",
    "unplugin-auto-import": "^19.1.2",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "publishConfig": {
    "main": "./lib/index.cjs",
    "module": "./lib/index.js",
    "exports": {
      ".": {
        "import": {
          "types": "./lib/index.d.ts",
          "default": "./lib/index.js"
        },
        "browser": {
          "types": "./lib/browser.d.ts",
          "default": "./lib/browser.js"
        },
        "module-sync": {
          "types": "./lib/index.d.ts",
          "default": "./lib/index.js"
        },
        "require": {
          "types": "./index.d.cts",
          "default": "./lib/index.cjs"
        }
      },
      "./mini-app": {
        "types": "./lib/mini-app.d.ts",
        "default": "./lib/mini-app.js"
      },
      "./polyfill": {
        "types": "./lib/polyfill.d.ts",
        "default": "./lib/polyfill.js"
      },
      "./ponyfill": {
        "types": "./lib/ponyfill.d.ts",
        "default": "./lib/ponyfill.js"
      }
    },
    "types": "./lib/index.d.ts"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^22.13.14",
      "es5-ext": "npm:@unes/es5-ext@^0.10.64-1",
      "prettier": "^3.5.3"
    },
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "core-js",
      "es5-ext",
      "esbuild",
      "nodent-runtime",
      "simple-git-hooks"
    ]
  },
  "size-limit": [
    {
      "path": "lib/browser.js",
      "limit": "300B"
    },
    {
      "path": "lib/mini-app.js",
      "limit": "700B"
    },
    {
      "path": "lib/ponyfill.js",
      "limit": "500B"
    }
  ],
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
